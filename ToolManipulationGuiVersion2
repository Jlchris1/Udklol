-- NPC_KillAura_Compact_Nearest.lua
-- Compact, mobile-friendly GUI: Nearest NPC KillAura + Attach Target + Kill All (equipped tools)

--// Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

--// Config
local loopRate = 0.3 -- check nearest NPC every 0.3s
local hrpAdjustRate = 0.5

--// GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "NPCKillAuraGuiNearest"
screenGui.ResetOnSpawn = false
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Global
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 200, 0, 300)
mainFrame.Position = UDim2.new(0.5, 0, 0.55, 0)
mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
mainFrame.BackgroundColor3 = Color3.fromRGB(18, 18, 18)
mainFrame.BackgroundTransparency = 0.05
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local hideToggle = Instance.new("TextButton")
hideToggle.Size = UDim2.new(0, 100, 0, 24)
hideToggle.Position = UDim2.new(0.5, -50, 0.55, -180)
hideToggle.Text = "Hide/Show GUI"
hideToggle.BackgroundColor3 = Color3.fromRGB(170,170,170)
hideToggle.Parent = screenGui
hideToggle.MouseButton1Click:Connect(function()
	mainFrame.Visible = not mainFrame.Visible
end)

--// UI Helpers
local function createLabel(parent, text, y)
	local lbl = Instance.new("TextLabel")
	lbl.Size = UDim2.new(1, -8, 0, 14)
	lbl.Position = UDim2.new(0, 4, 0, y)
	lbl.BackgroundTransparency = 1
	lbl.Text = text
	lbl.TextXAlignment = Enum.TextXAlignment.Left
	lbl.TextColor3 = Color3.new(1,1,1)
	lbl.Font = Enum.Font.SourceSans
	lbl.TextSize = 12
	lbl.Parent = parent
	return lbl
end

local function createTextBox(parent, placeholder, y)
	local tb = Instance.new("TextBox")
	tb.Size = UDim2.new(1, -8, 0, 18)
	tb.Position = UDim2.new(0, 4, 0, y)
	tb.PlaceholderText = placeholder
	tb.Text = ""
	tb.BackgroundColor3 = Color3.fromRGB(230,230,230)
	tb.Parent = parent
	return tb
end

local function createToggle(parent, text, y)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -8, 0, 20)
	btn.Position = UDim2.new(0, 4, 0, y)
	btn.Text = text .. " : OFF"
	btn.BackgroundColor3 = Color3.fromRGB(200,200,200)
	btn.Parent = parent
	return btn
end

local function createButton(parent, text, y)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -8, 0, 20)
	btn.Position = UDim2.new(0, 4, 0, y)
	btn.Text = text
	btn.BackgroundColor3 = Color3.fromRGB(180,180,250)
	btn.Parent = parent
	return btn
end

--// UI Elements
local yPos = 4
createLabel(mainFrame, "Kill-Aura / NPC Utilities", yPos) yPos = yPos + 18
local rangeBox = createTextBox(mainFrame, "Kill aura range", yPos) yPos = yPos + 20
local attachRangeBox = createTextBox(mainFrame, "Attach range", yPos) yPos = yPos + 20
local enableKillToggle = createToggle(mainFrame, "Enable Kill Aura", yPos) yPos = yPos + 22
local enableAttachKillToggle = createToggle(mainFrame, "Enable Attach Kill Aura", yPos) yPos = yPos + 22
createLabel(mainFrame, "NPC HRP size adjust", yPos) yPos = yPos + 16
local hrpSizeBox = createTextBox(mainFrame, "HRP size", yPos) yPos = yPos + 20
local loopHrpAdjustToggle = createToggle(mainFrame, "Loop HRP adjust", yPos) yPos = yPos + 22
local targetAllToggle = createToggle(mainFrame, "Target All NPCs", yPos) yPos = yPos + 22
local attachToolButton = createButton(mainFrame, "Attach Tool (Shirt)", yPos) yPos = yPos + 22
local attachTargetToggle = createToggle(mainFrame, "Attach Target NPCs", yPos) yPos = yPos + 22
local killAllToggle = createToggle(mainFrame, "Kill All (Equipped Tools)", yPos) yPos = yPos + 22
local unattachButton = createButton(mainFrame, "Unattach Tools", yPos) yPos = yPos + 22

--// State
local state = {
	killAuraEnabled = false,
	attachKillAuraEnabled = false,
	loopHrpAdjust = false,
	targetAllNPCs = false,
	attachTarget = false,
	killAllEnabled = false,
	killAuraRange = 8,
	attachRange = 8,
	hrpSizeValue = 2,
}

--// Utilities
local function safeNumberFromTextBox(tb, fallback)
	local n = tonumber(tb.Text)
	if n and n > 0 then return n end
	return fallback
end

local function getMyHRP()
	local char = player.Character
	if not char then return nil end
	return char:FindFirstChild("HumanoidRootPart") or char:FindFirstChildWhichIsA("BasePart")
end

local function getNPCHRP(model)
	if not model or not model:IsA("Model") then return nil end
	local hrp = model:FindFirstChild("HumanoidRootPart")
	if hrp then return hrp end
	for _, part in ipairs(model:GetChildren()) do
		if part:IsA("BasePart") then return part end
	end
	return nil
end

local function getAllNPCs()
	local results = {}
	for _, obj in pairs(workspace:GetDescendants()) do
		if obj:IsA("Model") and obj:FindFirstChildWhichIsA("Humanoid") and not Players:GetPlayerFromCharacter(obj) then
			table.insert(results, obj)
		end
	end
	return results
end

local function getNearestNPC(range)
	local myHRP = getMyHRP()
	if not myHRP then return nil end
	local nearest = nil
	local shortest = math.huge
	for _, npc in ipairs(getAllNPCs()) do
		local hrp = getNPCHRP(npc)
		if hrp then
			local dist = (hrp.Position - myHRP.Position).Magnitude
			if dist < shortest and dist <= range then
				shortest = dist
				nearest = npc
			end
		end
	end
	return nearest
end

local function teleportToolsToNPC(npc)
	local npcHRP = getNPCHRP(npc)
	if not npcHRP then return end
	local char = player.Character
	if not char then return end
	for _, tool in pairs(char:GetChildren()) do
		if tool:IsA("Tool") and tool.Parent == char then
			local handle = tool:FindFirstChild("Handle")
			if handle then pcall(function() handle.Massless = true handle.Position = npcHRP.Position end) end
		end
	end
end

local function teleportShirtToolsToNPC(npc)
	local npcHRP = getNPCHRP(npc)
	if not npcHRP then return end
	local char = player.Character
	if not char then return end
	local container = char:FindFirstChild("Shirt") or char:FindFirstChild("Humanoid")
	if container then
		for _, tool in pairs(container:GetChildren()) do
			if tool:IsA("Tool") then
				for _, part in pairs(tool:GetDescendants()) do
					if part:IsA("BasePart") then
						pcall(function() part.Massless = true part.Position = npcHRP.Position end)
					end
				end
			end
		end
	end
end

--// Loops
local loops = {}

loops.killAuraLoop = function()
	while state.killAuraEnabled do
		local target = getNearestNPC(state.killAuraRange)
		if target then
			teleportToolsToNPC(target)
		end
		task.wait(loopRate)
	end
end

loops.attachKillAuraLoop = function()
	while state.attachKillAuraEnabled do
		local target = getNearestNPC(state.attachRange)
		if target then
			teleportShirtToolsToNPC(target)
		end
		task.wait(loopRate)
	end
end

loops.killAllLoop = function()
	while state.killAllEnabled do
		for _, npc in ipairs(getAllNPCs()) do
			teleportToolsToNPC(npc)
		end
		task.wait(loopRate)
	end
end

loops.targetAllLoop = function()
	while state.targetAllNPCs do
		for _, npc in ipairs(getAllNPCs()) do
			teleportShirtToolsToNPC(npc)
		end
		task.wait(loopRate)
	end
end

loops.attachTargetLoop = function()
	while state.attachTarget do
		for _, npc in ipairs(getAllNPCs()) do
			teleportShirtToolsToNPC(npc)
		end
		task.wait(loopRate)
	end
end

loops.hrpAdjustLoop = function()
	while state.loopHrpAdjust do
		local sizeVal = state.hrpSizeValue
		for _, npc in ipairs(getAllNPCs()) do
			local hrp = npc:FindFirstChild("HumanoidRootPart")
			if hrp then pcall(function() hrp.Size = Vector3.new(sizeVal,sizeVal,sizeVal) hrp.CanCollide = false end) end
		end
		task.wait(hrpAdjustRate)
	end
end

--// Toggle helper
local function setToggle(btn, enabled)
	if enabled then
		btn.BackgroundColor3 = Color3.fromRGB(120,200,120)
		btn.Text = btn.Text:match("^[^:]+").." : ON"
	else
		btn.BackgroundColor3 = Color3.fromRGB(200,200,200)
		btn.Text = btn.Text:match("^[^:]+").." : OFF"
	end
end

--// Connections
enableKillToggle.MouseButton1Click:Connect(function()
	state.killAuraEnabled = not state.killAuraEnabled
	setToggle(enableKillToggle, state.killAuraEnabled)
	if state.killAuraEnabled then
		state.killAuraRange = safeNumberFromTextBox(rangeBox, state.killAuraRange)
		task.spawn(loops.killAuraLoop)
	end
end)

enableAttachKillToggle.MouseButton1Click:Connect(function()
	state.attachKillAuraEnabled = not state.attachKillAuraEnabled
	setToggle(enableAttachKillToggle, state.attachKillAuraEnabled)
	if state.attachKillAuraEnabled then
		state.attachRange = safeNumberFromTextBox(attachRangeBox, state.attachRange)
		task.spawn(loops.attachKillAuraLoop)
	end
end)

loopHrpAdjustToggle.MouseButton1Click:Connect(function()
	state.loopHrpAdjust = not state.loopHrpAdjust
	setToggle(loopHrpAdjustToggle, state.loopHrpAdjust)
	if state.loopHrpAdjust then
		state.hrpSizeValue = safeNumberFromTextBox(hrpSizeBox, state.hrpSizeValue)
		task.spawn(loops.hrpAdjustLoop)
	end
end)

targetAllToggle.MouseButton1Click:Connect(function()
	state.targetAllNPCs = not state.targetAllNPCs
	setToggle(targetAllToggle, state.targetAllNPCs)
	if state.targetAllNPCs then task.spawn(loops.targetAllLoop) end
end)

attachTargetToggle.MouseButton1Click:Connect(function()
	state.attachTarget = not state.attachTarget
	setToggle(attachTargetToggle, state.attachTarget)
	if state.attachTarget then task.spawn(loops.attachTargetLoop) end
end)

killAllToggle.MouseButton1Click:Connect(function()
	state.killAllEnabled = not state.killAllEnabled
	setToggle(killAllToggle, state.killAllEnabled)
	if state.killAllEnabled then task.spawn(loops.killAllLoop) end
end)

attachToolButton.MouseButton1Click:Connect(function()
	local char = player.Character
	if char then
		local container = char:FindFirstChild("Shirt") or char:FindFirstChild("Humanoid")
		if container then
			for _, tool in pairs(char:GetChildren()) do
				if tool:IsA("Tool") then tool.Parent = container end
			end
		end
	end
end)

unattachButton.MouseButton1Click:Connect(function()
	local char = player.Character
	if not char then return end
	for _, tool in pairs(char:GetChildren()) do
		if tool:IsA("Tool") then tool.Parent = char end
	end
	local container = char:FindFirstChild("Shirt") or char:FindFirstChild("Humanoid")
	if container then
		for _, tool in pairs(container:GetChildren()) do
			if tool:IsA("Tool") then tool.Parent = char end
		end
	end
end)

rangeBox.FocusLost:Connect(function() state.killAuraRange = safeNumberFromTextBox(rangeBox, state.killAuraRange) end)
attachRangeBox.FocusLost:Connect(function() state.attachRange = safeNumberFromTextBox(attachRangeBox, state.attachRange) end)
hrpSizeBox.FocusLost:Connect(function() state.hrpSizeValue = safeNumberFromTextBox(hrpSizeBox, state.hrpSizeValue) end)

print("NPC KillAura Compact GUI loaded - targets nearest NPCs every 0.3s, fully functional.")
