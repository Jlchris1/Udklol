-- Soft golden sky with gentle sun rays and light blur
local Lighting = game:GetService("Lighting")

-- Ambient Lighting
Lighting.Ambient = Color3.fromRGB(255, 210, 150)
Lighting.OutdoorAmbient = Color3.fromRGB(255, 190, 120)

-- Sky
local Sky = Instance.new("Sky")
Sky.Name = "SoftGoldenSky"
Sky.SunAngularSize = 20
Sky.MoonAngularSize = 10
Sky.Parent = Lighting

-- Bloom effect (soft)
local Bloom = Instance.new("BloomEffect")
Bloom.Name = "SoftGoldenBloom"
Bloom.Intensity = 0.8  -- slightly lower
Bloom.Size = 10
Bloom.Threshold = 0.85
Bloom.Enabled = true
Bloom.Parent = Lighting

-- Sun rays effect (gentle)
local SunRays = Instance.new("SunRaysEffect")
SunRays.Intensity = 0.25
SunRays.Spread = 0.3
SunRays.Enabled = true
SunRays.Parent = Lighting

-- Depth of Field (light blur effect)
local DOF = Instance.new("DepthOfFieldEffect")
DOF.Name = "LightBlur"
DOF.FocusDistance = 50  -- focal point distance
DOF.InFocusRadius = 50  -- objects within this distance stay sharp
DOF.NearIntensity = 0.1  -- subtle blur
DOF.FarIntensity = 0.1
DOF.Enabled = true
DOF.Parent = Lighting

-- Lighting properties for warmth
Lighting.ColorShift_Bottom = Color3.fromRGB(255, 200, 130)
Lighting.ColorShift_Top = Color3.fromRGB(255, 230, 180)
Lighting.ClockTime = 14
Lighting.Brightness = 1.1
Lighting.FogColor = Color3.fromRGB(255, 210, 160)
Lighting.FogStart = 0
Lighting.FogEnd = 700

print("Soft golden sky with gentle sun rays and light blur applied!")
