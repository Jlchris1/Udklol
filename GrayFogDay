-- üå´Ô∏è Intense Fog + Atmosphere + Skybox Script
-- Place this in StarterPlayerScripts (LocalScript) or ServerScriptService (Script)

local Lighting = game:GetService("Lighting")

-- ü™ê Fog Settings (more intense)
Lighting.FogStart = 20 -- Starts closer to the player
Lighting.FogEnd = 150 -- Ends sooner for thicker fog
Lighting.FogColor = Color3.fromRGB(80, 80, 80) -- Darker gray fog

-- ‚òÅÔ∏è Atmosphere Settings (more dramatic)
local atmosphere = Lighting:FindFirstChildOfClass("Atmosphere")
if not atmosphere then
    atmosphere = Instance.new("Atmosphere")
    atmosphere.Parent = Lighting
end

atmosphere.Color = Color3.fromRGB(110, 110, 110) -- Darker overall tint
atmosphere.Decay = Color3.fromRGB(90, 90, 90) -- More decay for depth
atmosphere.Density = 0.75 -- Thicker atmosphere
atmosphere.Offset = 0.4 -- Slightly higher horizon offset
atmosphere.Glare = 0.2 -- Slightly stronger glare
atmosphere.Haze = 4 -- Heavier haze

-- üåå Custom Skybox Setup
local sky = Lighting:FindFirstChildOfClass("Sky")
if not sky then
    sky = Instance.new("Sky")
    sky.Parent = Lighting
end

sky.SkyboxUp = "http://www.roblox.com/asset/?id=4495867486"
sky.SkyboxRt = "http://www.roblox.com/asset/?id=4495866584"
sky.SkyboxLf = "http://www.roblox.com/asset/?id=4495866035"
sky.SkyboxFt = "http://www.roblox.com/asset/?id=4495865458"
sky.SkyboxDn = "http://www.roblox.com/asset/?id=4495864887"
sky.SkyboxBk = "http://www.roblox.com/asset/?id=4495864450"

-- Optional: Adjust sun/moon intensity for mood
Lighting.Brightness = 1
Lighting.ClockTime = 14 -- Afternoon lighting (change to 18 for dusk)
Lighting.ExposureCompensation = -0.1 -- Slightly darker for mood
